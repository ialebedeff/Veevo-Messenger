<UserControl x:Class="Veevo.DSK.UserControls.UserDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Veevo.DSK.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="60" Height="60">
    <Grid>
        <Border CornerRadius="90" Background="#FF4400A6" Margin="10,5,0,5" Width="50" Height="50" HorizontalAlignment="Left" />
        <TextBlock Foreground="White" TextAlignment="Left" VerticalAlignment="Top" Margin="80,10,0,0" FontFamily="PT Sans Caption" FontWeight="Bold" Text="{Binding Path=Username}" Height="15" HorizontalAlignment="Left" Width="160"/>
        <TextBlock Margin="80,30,0,0" Foreground="#FF1C1C1C" HorizontalAlignment="Left" Width="160" Height="20" VerticalAlignment="Top"></TextBlock>
        <TextBlock Foreground="#FF0C0C0C"  TextAlignment="Left" VerticalAlignment="Top" Margin="0,10,20,0" FontFamily="PT Sans Caption" FontWeight="Normal" Height="15" Text="{Binding Path=LastSeen}" HorizontalAlignment="Right" Width="40"/>
    </Grid>
</UserControl>
