<Page x:Class="Veevo.DSK.Pages.EmptyDialogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Veevo.DSK.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmptyDialogPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="\Files\Images\background3.png" TileMode="Tile" Viewport="0,0,640,640" ViewportUnits="Absolute" />
        </Grid.Background>

        <Border Width="240" Height="35" CornerRadius="5">
            <Border.Background>
                <SolidColorBrush Color="Black" Opacity="0.4"/>
            </Border.Background>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White">Начните диалог с пользователем</TextBlock>
        </Border>
    </Grid>
</Page>
