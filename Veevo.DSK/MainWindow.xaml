<Window x:Class="Veevo.DSK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Veevo.DSK"
        mc:Ignorable="d"
        AllowsTransparency="True"
        MinWidth="600"
        Background="Transparent"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MinHeight="450"
        Width="600"
        Title="MainWindow" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen" WindowStyle="None" IsTabStop="False">


    <Border  CornerRadius="10" ClipToBounds="True" x:Name="MainBorder">
        <Grid>
           
            <Grid Background="#FF17212B" Margin="0,15,0,0">
                <Frame x:Name="Frame" Loaded="Frame_Loaded" NavigationUIVisibility="Hidden" IsTabStop="False" Margin="0,15,0,0" />
            </Grid>
            <Border Background="#FF242F3D" CornerRadius="10,10,0,0"  ClipToBounds="True" Height="30" VerticalAlignment="Top"/>
        </Grid>

    </Border>

</Window>
